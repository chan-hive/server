{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "targets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "boards": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "filters": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "text"
                                    ]
                                },
                                "at": {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "title",
                                            "content"
                                        ]
                                    }
                                },
                                "content": {
                                    "type": "string"
                                },
                                "caseSensitive": {
                                    "type": "boolean"
                                }
                            },
                            "required": [
                                "type",
                                "at",
                                "content"
                            ],
                            "additionalProperties": false
                        }
                    }
                },
                "required": [
                    "boards",
                    "filters"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "targets"
    ],
    "additionalProperties": false
}